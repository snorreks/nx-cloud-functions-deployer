{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"module": "commonjs",
		"types": ["node"],
		"target": "ES2022",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"lib": ["ES2022", "dom"],
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"sourceMap": true
	},
	"exclude": ["**/*.spec.ts", "scripts"],
	"include": ["**/*.ts"]
}
